{% if sortable %}
<style type="text/css">
    /* Hide sortable field */
    div{{ '#' ~ id }} > .collection > .collection-item > div > {{ 'div.' ~ sortable_field }}.control-group,
    table{{ '#' ~ id }} > .collection > .collection-item > td div > {{ 'div.' ~ sortable_field }}.control-group { 
        visibility: hidden; 
        position: absolute;
    }
</style>
{% endif %}